<!DOCTYPE html>
<html>
<head>
    <title>Arrow Function Even Check</title>
</head>
<body>

<p id="result"></p>

<script>
    // Arrow function
    const isEven = (num) => num % 2 === 0;

    let number = 12;

    document.getElementById("result").innerHTML =
        "Number: " + number + "<br>" +
        "Is Even? " + isEven(number);
</script>

</body>
</html>
